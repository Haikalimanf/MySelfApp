<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".ui.daily_activity.DailyActivityFragment"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aktivitas Sehari hari"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
    />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDailyActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:itemCount="3"
        tools:listitem="@layout/item_layout_daily"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daftar Teman"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
    />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFriend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    />

</LinearLayout>